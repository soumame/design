---
import { PlaneTakeoff } from "lucide-astro";
---

<div class="col-span-3 p-4 grid grid-rows-3 gap-10 w-full h-[70%] my-auto">
  <div
    class="bg-sky-700/60 backdrop-blur-xl rounded-3xl p-4 flex w-full h-full justify-center items-center"
  >
    <span class="text-white">
      <h3 class="text-2xl font-bold">Flight Information</h3>
      <p class="text-sm text-gray-200">Check your flight information</p>
    </span>
    <PlaneTakeoff class="p-4 w-24 h-24 text-white" />
  </div>
  <div class="bg-gray-300"></div>
  <div class="bg-gray-300"></div>
</div>
